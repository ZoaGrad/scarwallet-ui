# ScarWallet UI Environment Configuration
# Copy this file to .env.local and fill in your values

# Network Configuration
NEXT_PUBLIC_NETWORK=polygon-amoy
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_RPC_URL=https://rpc-amoy.polygon.technology

# Contract Addresses
NEXT_PUBLIC_SCARCOIN_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SCARINDEX_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000

# API Configuration
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key

# Wallet Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Application Settings
NEXT_PUBLIC_APP_NAME=ScarWallet
NEXT_PUBLIC_APP_DESCRIPTION=Minimal ScarWallet for ScarCoin on Polygon Amoy
NEXT_PUBLIC_APP_URL=https://scarwallet.vercel.app

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_TESTNET=true

# Development
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development