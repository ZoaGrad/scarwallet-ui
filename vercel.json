{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm ci",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_CHAIN_ID": "@chain_id",
    "NEXT_PUBLIC_RPC_URL": "@rpc_url",
    "NEXT_PUBLIC_NETWORK_NAME": "@network_name",
    "NEXT_PUBLIC_CURRENCY_SYMBOL": "@currency_symbol",
    "NEXT_PUBLIC_BLOCK_EXPLORER": "@block_explorer",
    "NEXT_PUBLIC_SCARCOIN_CONTRACT": "@scarcoin_contract",
    "NEXT_PUBLIC_SCARWALLET_CONTRACT": "@scarwallet_contract"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}